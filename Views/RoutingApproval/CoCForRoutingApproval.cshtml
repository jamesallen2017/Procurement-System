@model PO_PurchasingUI.Models.ClientModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<input type="hidden" value="104" id="ModuleAccess" />

<!-- Page Header -->
<div class="content bg-gray-lighter">
    <div class="row items-push">
        <div class="col-sm-7">
            <h1 class="page-heading">
                CERTIFICATE OF COMPLETION FOR APPROVAL <small></small>
            </h1>
        </div>
        <div class="col-sm-5 text-right hidden-xs">
            <ol class="breadcrumb push-10-t">
                <li>ROUTING APPROVAL</li>
                <li><a class="link-effect" href="">COC FOR APPROVAL</a></li>
            </ol>
        </div>
    </div>
</div>
<!-- END Page Header -->

<div class="content">
    <div class="block animated fadeIn">
        <div class="block-header">
            <ul class="block-options">
                <li>
                </li>
            </ul>
            <h4 class="block-title">Date : @DateTime.Now.ToShortDateString()</h4>
        </div>

        @if (ViewBag.CoCMonitoring == true)
        {
            <div class="block-content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel-body table-responsive">
                            <table class="table table-striped table-borderless text-center js-dataTable-full-pagination">
                                <thead>
                                    <tr>
                                        <th style="font-size: 12px;" class="col-xs-2 col-sm-1 text-center">Action</th>
                                        <th style="font-size: 12px;" class="col-xs-3 col-sm-2 text-center">Control No.</th>
                                        <th style="font-size: 12px;" class="col-xs-3 col-sm-3 text-left">Client</th>
                                        <th style="font-size: 12px;" class="col-xs-2 col-sm-2 text-center">Project Title</th>
                                        <th style="font-size: 12px;" class="col-xs-2 col-sm-2 text-center">Assessed by</th>
                                        <th style="font-size: 12px;" class="col-xs-2 col-sm-2 text-center">Entry Date</th>
                                    </tr>
                                </thead>                               
                                    <tbody>
                                        @foreach (var item in Model.PopulateCertificateOfCompletion)
                                        {
                                            <tr>
                                                <td style="font-size: 12px;" class="col-xs-2 col-sm-1"><a class="btn btn-primary" href="@Url.Action("GetCertificateOfCompletion", "Home", new { @id = item.COC_ControlNo,@id2= "84" })"><span class="fa fa-eye"></span></a></td>
                                                <td style="font-size: 12px;" class="col-xs-3 col-sm-2"><a href="@Url.Action("COC_Report", "Report", new { @id = item.COC_ControlNo})" target="_blank">@Html.DisplayFor(Modelitem => item.COC_ControlNo)</a></td>
                                                <td style="font-size: 12px; " class="col-xs-3 col-sm-3 text-left">@Html.DisplayFor(Modelitem => item.COC_Client)</td>
                                                <td style="font-size: 12px;" class="col-xs-3 col-sm-3">@Html.DisplayFor(Modelitem => item.COC_ProjectTitle)</td>
                                                <td style="font-size: 12px;" class="col-xs-2 col-sm-2">@Html.DisplayFor(Modelitem => item.COC_Resposible)</td>
                                                <td style="font-size: 12px;" class="col-xs-2 col-sm-2">@Html.DisplayFor(Modelitem => item.COC_EntryDate)</td>
                                            </tr>
                                        }
                                    </tbody>
                                
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        }
        @if (ViewBag.CoCMonitoring == false)
        {

            <form class="form-horizontal push-10-t">

                @Html.HiddenFor(client => client.COC_ControlNo)
                @Html.HiddenFor(client => client.COC_Status)
                @Html.HiddenFor(client => client.COC_Resposible)
                
                <div class="block-content block-content-narrow">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="form-material form-material-primary floating">
                                    @Html.TextBoxFor(client => client.COC_Client, new { @class = "form-control", disabled = "disabled" })

                                    <label for="ClientNameList">Client</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="form-material form-material-primary floating">
                                    @Html.EditorFor(client => client.COC_StartDate, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                    <label for="StartDate">Start Date</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="form-material form-material-primary floating">
                                    @Html.TextBoxFor(client => client.POReferenceNo, new { @class = "form-control", disabled = "disabled" })
                                    <label for="StartDate">PO Reference</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="form-material form-material-primary floating">
                                    @Html.TextBoxFor(client => client.COC_Assessedby, new { @class = "form-control", autocomplete = "off", maxlength = "50" })
                                    <label for="StartDate">Assessed By</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="form-material form-material-primary floating">
                                    @Html.TextBoxFor(client => client.ApproverID, new { @class = "form-control", autocomplete = "off", disabled = "disabled" })
                                    <label for="Approver">Approver</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="form-material form-material-primary floating">
                                    @Html.TextBoxFor(client => client.COC_ProjectTitle, new { @class = "form-control", disabled = "disabled" })
                                    <label for="ProjectName">Project Title</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="form-material form-material-primary floating">
                                    @Html.EditorFor(client => client.COC_CompletionDate, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                    <label for="CompletionDate">Completion Date</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12">
                 

                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="form-material form-material-primary floating">
                                    @Html.TextAreaFor(client => client.ProjectDetails, new { @class = "form-control", disabled = "disabled", style = "margin: 0px; width: 100%; resize:vertical; height: 38px;" })
                                    <label for="ProjectDetails">Project Details</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="form-material form-material-primary floating">
                                    @Html.TextAreaFor(client => client.COC_RejectRemarks, new { @class = "form-control", maxlength = "300", style = "margin: 0px; width: 100%; resize:vertical; height: 38px;" })
                                    <label for="StartDate">Reject Remarks</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-12">
                            <input class="btn btn-sm btn-danger  pull-right" type="button" onclick="return window.history.back();" style="margin-left:5px;" value="Back" />
                            <input class="btn btn-sm btn-primary  pull-right" type="button" id="btnConfirm" onclick="Routing(this)" style="margin-left:5px;" value="Confirm" />
                            <input class="btn btn-sm btn-dark  pull-right" type="button" id="btnReject" onclick="Rejected(this)" value="Reject" />
                        </div>
                    </div>
                </div>
            </form>
        }
    </div>
</div>

@section scripts {

 @Scripts.Render("~/bundles/COCRoutingApproval")
}