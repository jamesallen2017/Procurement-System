@model PO_PurchasingUI.Models.AccountingModel



@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<input type="hidden" value="93" id="ModuleAccess" />

<!-- Page Header -->
<div class="content bg-gray-lighter">
    <div class="row items-push">
        <div class="col-sm-7">
            <h1 class="page-heading">
                ACCOUNTING LOGS<small></small>
            </h1>
        </div>
        <div class="col-sm-5 text-right hidden-xs">
            <ol class="breadcrumb push-10-t">
                <li>ACCOUNTING</li>
                <li><a class="link-effect" href="">ACCOUNTING LOGS</a></li>
            </ol>
        </div>
    </div>
</div>
<!-- END Page Header -->


<div class="content">
    <div class="block">
        <div class="block-header">
            <h4 class="block-title">Date : @DateTime.Now.ToShortDateString()</h4>
        </div>

        <div class="block-content">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel-body table-responsive">
                        <table class="table table-striped table-borderless text-center js-dataTable-full-pagination">
                            <thead>
                                <tr>
                                    <th style="font-size:12px;" class="text-left col-md-2">User Name</th>
                                    <th style="font-size:12px;" class="text-left">Audit Message</th>
                                    <th style="font-size:12px;" class="text-left col-md-2">Entry Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.PopulateAccountingLogs)
                                {
                                    <tr>
                                        <td style="font-size:12px;" class="text-left">@Html.DisplayFor(modelitem => item.UserName)</td>
                                        <td style="font-size:12px;" class="text-left">@Html.DisplayFor(modelitem => item.Audit_Message)</td>
                                        <td style="font-size:12px;" class="text-left">@Html.DisplayFor(modelitem => item.EntryDate)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>