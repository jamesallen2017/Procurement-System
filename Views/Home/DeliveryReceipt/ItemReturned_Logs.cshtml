@model PO_PurchasingUI.Models.DRModel



@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<input type="hidden" value="75" id="ModuleAccess" />


<!-- Page Header -->
<div class="content bg-gray-lighter">
    <div class="row items-push">
        <div class="col-sm-7">
            <h1 class="page-heading">
                ITEM RETURNED LOGS<small></small>
            </h1>
        </div>
        <div class="col-sm-5 text-right hidden-xs">
            <ol class="breadcrumb push-10-t">
                <li>DELIVERY RECEIPT</li>
                <li><a class="link-effect" href="">ITEM RETURNED LOGS</a></li>
            </ol>
        </div>
    </div>
</div>
<!-- END Page Header -->


<div class="content">
    <div class="block">
        <div class="block-header">
            <h4 class="block-title">Date : @DateTime.Now.ToShortDateString()</h4>
        </div>

        <div class="block-content">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel-body table-responsive">
                        <table class="table table-striped table-borderless text-center js-dataTable-full-pagination">
                            <thead>
                                <tr>
                                    <th style="font-size:12px;" class="text-left">DR Number</th>
                                    <th style="font-size:12px;" class="text-left">Company</th>
                                    <th style="font-size:12px;" class="text-left  col-md-2">Particular</th>
                                    <th style="font-size:12px;" class="text-left">Item Returned</th>
                                    <th style="font-size:12px;" class="text-left">Delivery Type</th>
                                    <th style="font-size:12px;" class="text-left col-md-2">Reason</th>
                                    <th style="font-size:12px;" class="text-left">Date Returned</th>
                                    <th style="font-size:12px;" class="text-left">Responsible</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.PopulateItemReturnedLogs)
                                {
                                <tr>
                                    <td style="font-size:12px;" class="text-left">@Html.DisplayFor(modelitem => item.DRNumber)</td>
                                    <td style="font-size:12px;" class="text-left">@Html.DisplayFor(modelitem => item.Company)</td>
                                    <td style="font-size:12px;" class="text-left">@Html.DisplayFor(modelitem => item.DRParticular)</td>
                                    <td style="font-size:12px;" class="text-left">@Html.DisplayFor(modelitem => item.DRItemReturn)</td>
                                    <td style="font-size:12px;" class="text-left">@Html.DisplayFor(modelitem => item.ModuleType)</td>
                                    <td style="font-size:12px;" class="text-left">@Html.DisplayFor(modelitem => item.DRReasonRemarks)</td>
                                    <td style="font-size:12px;" class="text-left">@Html.DisplayFor(modelitem => item.DRDate)</td>
                                    <td style="font-size:12px;" class="text-left">@Html.DisplayFor(modelitem => item.DRResponsible)</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>